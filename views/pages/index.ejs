        <link href="../css/tier-list-style.css" rel="stylesheet" type="text/css"/>
        <link href="../css/tier-list-mobile-style.css" rel="stylesheet" type="text/css"/>
        <link href="../css/upload-images-style.css" rel="stylesheet" type="text/css"/>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    </head>
    <body style="margin: 0 auto;">
        <header class="d-flex justify-content-between">
            <div id="logo-container" class="center-content">
                <img id="logo" src="./assets/tierlist.png"/>
            </div>
            <div id="download-container" class="center-content">
                <button id="download" class="btn btn-lg btn-secondary">Download</button>
            </div>
        </header>
        <main>
            <div id="tier-list-container">
                <div id="tier-list">
                </div>
            </div>
            <div id="tier-images-container">
                <div id="tier-images-title-container">
                    <div id="tier-images-title" class="center-content">
                        Images
                    </div>
                    <div class="dropdown">
                        <button type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-cog"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenuButton">
                          <a class="dropdown-item" style="font-size: 20px;" href="#" onclick="addMoreImages();">Upload</a>
                        </div>
                      </div>
                </div>
                <div id="tier-images-list-drag-drop-container">
                    <div id="tier-images-list-drag-drop">
                        <div id="tier-images-list" class="row g-0">
                            <div id="tier-image-1" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-2" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-3" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-4" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-5" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-6" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-7" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-8" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-9" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-10" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-11" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-12" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-13" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-14" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-15" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-16" class="tier-image col-lg-6 col-md-3 col-3"></div>
                            <div id="tier-image-17" class="tier-image col-lg-6 col-md-3 col-3"></div>
